    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.16",
    "tsc-alias": "^1.8.10"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "pnpm": {
    "overrides": {
      "eslint": "^8.57.0",
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "@types/react": "^19.0.0",
      "@types/react-dom": "^19.0.0"
    }
  }
