{
  "manifest_version": 3,
  "name": "wholesale-extension",
  "description": "description in manifest.json",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "chrome_url_overrides": {},
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "sidePanel",
    "cookies",
    "storage",
    "tabs",
    "webNavigation",
    "notifications",
    "scripting",
    "declarativeNetRequest",
    "webRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "1688-rules",
        "enabled": true,
        "path": "src/resources/1688.json"
      }
    ]
  },
  "host_permissions": ["*://*.1688.com/"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["src/pages/content/index.tsx"],
      "run_at": "document_start",
      "css": ["contentStyle.css"]
    },
    {
      "matches": ["*://*.1688.com/*"],
      "js": ["src/pages/content/site/alibaba.tsx"]
    }
  ],
  "externally_connectable": {
    "matches": ["*://*.1688.com/*"],
    "accepts_tls_channel_id": false
  },
  "side_panel": {
    "default_path": "src/pages/panel/index.html"
  },
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": ["contentStyle.css", "icon-128.png", "icon-32.png"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": [
        "src/pages/content/injected.js",
        "src/pages/content/site/alibaba.tsx"
      ],
      "matches": ["*://*.1688.com/*"],
      "all_frames": true
    }
  ]
}
